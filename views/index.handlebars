<div class="container">
    <h1 class="text-center">Burger Eating Simulator</h1>
    <hr>

    <!--  image left  -->
    <div class="row">
        <div class="col-md-6">

            <img src='/assets/img/burger2.png' alt="" class="w-100" />
        </div>
        <!-- /.col-md-6 -->
        <div class="col-md-6">
            <div class="row align-items-center h-100">
                <div class="col">
                    <h1 class="display-3"><b>Burgers:</b> Not Devoured</h1>
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> not-devoured-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 order-md-6">
        </div>
        <div class="col-md-6 order-md-1">
            <div class="row align-items-center h-100">
                <div class="col">
                    <h1 class="display-3"><b>Burgers:</b> Devoured</h1>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> devoured-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="card bg-light">
        <form class="card-body" novalidate="" action="" method="" id="bootstrapForm">
            <div class="form-group">
                <label class="h4 form-control-label" for="input3">Add a Burger</label>
                <input type="textarea" placeholder="i.e. 'Bacon Cheeseburger'" class="form-control" name="burger_name"
                    id="burger_name">
            </div>
            <div>
                <button type="submit" class="btn btn-secondary">Add</button>
            </div>
        </form>
    </div>
</div>